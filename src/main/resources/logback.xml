<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOGS" value="./logs" />
    <timestamp key="bySecond" datePattern="yyyy.MM.dd.'T'.HH.mm.ss.SSS" timeReference="contextBirth" />

    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <http>
            <url>http://localhost:3100/loki/api/v1/push</url>
        </http>
        <format>
            <label>
                <pattern>app=weather-app-backend,level=%level</pattern>
                <readMarkers>true</readMarkers>
            </label>
            <message>
                <pattern>
                    {
                    "timestamp":"%d{yyyy-MM-dd HH:mm:ss}",
                    "level":"%level",
                    "logger":"%logger{36}",
                    "message":"%message",
                    "traceparent":"00-%mdc{trace_id}-%mdc{span_id}-%mdc{trace_flags}"
                    }
                </pattern>
            </message>
        </format>
    </appender>

    <appender name="DebugFile" class="ch.qos.logback.core.FileAppender">
        <file>${LOGS}/debug-${bySecond}.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger - 00-%mdc{trace_id}-%mdc{span_id}-%mdc{trace_flags} - %msg%n</Pattern>
        </encoder>
    </appender>

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger - 00-%mdc{trace_id}-%mdc{span_id}-%mdc{trace_flags} - %msg%n</Pattern>
        </layout>
    </appender>

    <root level="debug">
        <appender-ref ref="LOKI" />
        <appender-ref ref="DebugFile" />
        <appender-ref ref="Console" />
    </root>
</configuration>